# Shared Postgres connection string used by both services in docker-compose.yml
# Local dev example (requires a local Postgres instance):
DATABASE_URL=postgres://postgres:postgres@host.docker.internal:5432/torqueindex_dev?sslmode=disable

# Phoenix secrets (required for production deployments)
# Generate secure values with:
#   cd phoenix-api && mix phx.gen.secret
SECRET_KEY_BASE=replace_me
JWT_SECRET=replace_me

